      				}) 
    			}else {
      				aardio.ask(val).then( text=>{
      					appendMsg({
          					type: 'text',
          					content: { text: text },
        					});	
      				}) 
    			}
    			
    		}
  		}
		
  		function renderMessageContent(msg) {
    		const { type, content } = msg;
		
    		// 根据消息类型来渲染
    		switch (type) {
      		case 'text':
        		return <Bubble content={content.text} />;
      		case 'image':
        		return (
          		<Bubble type="image">
            		<img src={content.picUrl} alt="" />
          		</Bubble>
        		);
      		default:
        		return null;
    		}
  		}
		
  		return (
    		<Chat
      		navbar={{ title: '' }}
      		messages={messages}
      		renderMessageContent={renderMessageContent}
      		onSend={handleSend}
    		/>
